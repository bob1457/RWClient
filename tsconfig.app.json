{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "./projects/property-manager/src/**/*.ts",
    "./projects/marketing-manager/src/**/*.ts",
    "./projects/lease-manager/src/**/*.ts",
    "./projects/business-manager/src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "test.ts",
    "**/*.spec.ts",

    "./projects/property-manager/src/**/*spec.ts",
    // path is relative to the baseUrl settings in tsonfig.json
    "./projects/property-manager/src/app/app.module.ts",
    "./projects/property-manager/src/main.ts",
    "./projects/property-manager/src/test.ts",

    "./projects/marketing-manager/src/**/*spec.ts",
    "./projects/marketing-manager/src/app/app.module.ts",
    "./projects/marketing-manager/src/main.ts",
    "./projects/marketing-manager/src/test.ts",

    "./projects/lease-manager/src/**/*spec.ts",
    "./projects/lease-manager/src/app/app.module.ts",
    "./projects/lease-manager/src/main.ts",
    "./projects/lease-manager/src/test.ts",

    "./projects/business-manager/src/**/*spec.ts",
    "./projects/business-manager/src/app/app.module.ts",
    "./projects/business-manager/src/main.ts",
    "./projects/business-manager/src/test.ts"

  ]
}
